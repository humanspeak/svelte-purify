{
    "name": "@humanspeak/svelte-purify",
    "version": "0.0.6",
    "description": "Safe HTML rendering for Svelte powered by DOMPurify. SSR-ready, browser-only entry, and edge-friendly options.",
    "keywords": [
        "svelte",
        "sveltekit",
        "dompurify",
        "sanitize",
        "sanitization",
        "xss",
        "security",
        "html",
        "safe-html",
        "render",
        "renderer",
        "ssr",
        "edge",
        "browser",
        "browser-only",
        "svelte-component",
        "svelte-library",
        "svelte-plugin",
        "dom",
        "dompurify-config"
    ],
    "homepage": "https://purify.svelte.page",
    "bugs": {
        "url": "https://github.com/humanspeak/svelte-purify/issues"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/humanspeak/svelte-purify.git"
    },
    "funding": {
        "type": "github",
        "url": "https://github.com/sponsors/humanspeak"
    },
    "license": "MIT",
    "author": "Humanspeak, Inc.",
    "sideEffects": [
        "**/*.css"
    ],
    "type": "module",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "svelte": "./dist/index.js",
            "import": "./dist/index.js",
            "default": "./dist/index.js"
        }
    },
    "svelte": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "files": [
        "dist",
        "!dist/**/*.test.*",
        "!dist/**/*.spec.*"
    ],
    "scripts": {
        "build": "vite build && npm run prepack",
        "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
        "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
        "dev": "vite dev",
        "dev:all": "concurrently -k -n pkg,docs -c green,cyan \"pnpm -w -r --filter @humanspeak/svelte-purify run dev\" \"pnpm --filter docs run dev\"",
        "dev:pkg": "svelte-kit sync && svelte-package --watch",
        "format": "prettier --write .",
        "husky": "husky",
        "lint": "prettier --check . && eslint .",
        "prepack": "svelte-kit sync && svelte-package && publint",
        "prepare": "svelte-kit sync || echo ''",
        "preview": "vite preview",
        "test": "vitest run --coverage",
        "test:e2e": "playwright test",
        "test:e2e:debug": "playwright test --debug",
        "test:e2e:report": "playwright show-report",
        "test:e2e:ui": "playwright test --ui",
        "test:unit": "vitest --coverage --run",
        "test:watch": "vitest --coverage"
    },
    "dependencies": {
        "dompurify": "^3.3.0"
    },
    "devDependencies": {
        "@eslint/compat": "^1.4.0",
        "@eslint/js": "^9.38.0",
        "@playwright/test": "^1.56.1",
        "@sveltejs/adapter-auto": "^7.0.0",
        "@sveltejs/kit": "^2.47.3",
        "@sveltejs/package": "^2.5.4",
        "@sveltejs/vite-plugin-svelte": "^6.2.1",
        "@testing-library/jest-dom": "^6.9.1",
        "@testing-library/svelte": "^5.2.8",
        "@types/jsdom": "^27.0.0",
        "@types/node": "^24.9.1",
        "@vitest/coverage-v8": "^3.2.4",
        "concurrently": "^9.2.1",
        "eslint": "^9.38.0",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-svelte": "^3.12.5",
        "globals": "^16.4.0",
        "husky": "^9.1.7",
        "jsdom": "^27.0.1",
        "playwright": "^1.56.1",
        "prettier": "^3.6.2",
        "prettier-plugin-organize-imports": "^4.3.0",
        "prettier-plugin-sort-json": "^4.1.1",
        "prettier-plugin-svelte": "^3.4.0",
        "publint": "^0.3.15",
        "svelte": "^5.41.3",
        "svelte-check": "^4.3.3",
        "typescript": "^5.9.3",
        "typescript-eslint": "^8.46.2",
        "vite": "^7.1.12",
        "vitest": "^3.2.4"
    },
    "peerDependencies": {
        "svelte": "^5.0.0"
    },
    "engines": {
        "node": ">=18"
    },
    "publishConfig": {
        "access": "public"
    },
    "pnpm": {
        "onlyBuiltDependencies": [
            "esbuild"
        ]
    },
    "tags": [
        "svelte",
        "DOMPurify"
    ]
}
